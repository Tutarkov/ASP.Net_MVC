@model SEDC.PizzaApp.ViewModels.PizzaViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Pizza Details</h2>

<p>
    <strong>Name:</strong> @Model.Name
</p>
<p>
    <strong>Price:</strong> @Model.Price
</p>
<p>
    <strong>Pizza Size:</strong> @Model.PizzaSize
</p>
<p>
    @if (Model.IsOnPromotion)
    {
        <h4>This pizza is on promotion!</h4>
    }
    else
    {
        <h4>This pizza is not on promotion.</h4>
    }
</p>

